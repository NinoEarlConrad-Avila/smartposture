<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#fff</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Make status bar transparent -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item> <!-- This removes the background color -->
        <!-- You can also customize other UI elements like action bar, etc. -->
    </style>

    <style name="NavTextStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/nav_selected</item>
    </style>

    <style name="NavTextStyleInactive" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">@color/nav_unselected</item>
    </style>

    <style name="ActiveIndicatorStyle">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:shape">rectangle</item>
        <item name="android:radius">16dp</item>
    </style>

    <style name="CustomButtonStyle">
        <item name="android:background">@drawable/bg_btn_start</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:radius">8dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:shadowColor">#000000</item>
    </style>
</resources>