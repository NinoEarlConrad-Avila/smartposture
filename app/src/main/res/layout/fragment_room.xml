<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_dark_blue"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:padding="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_back"
            app:tint="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/roomNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/room"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:typeface="normal" />

            <TextView
                android:id="@+id/roomCreatorTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/room"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:typeface="normal" />
        </LinearLayout>


        <ImageView
            android:id="@+id/notification"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            app:srcCompat="@drawable/ic_notification"
            app:tint="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/optionsTrainer"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="30dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/addActivity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/bg_add_activity"
            android:layout_marginEnd="10dp"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/add_activity"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/bg_add_activity">

            <TextView
                android:id="@+id/textRoomCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/room_code"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/roomCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:text="@string/code"
                android:textColor="@color/white"

                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/viewJoinRequest"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:layout_marginBottom="1dp"
                android:background="@drawable/bg_add_activity">
                <TextView
                    android:id="@+id/textViewJoinRequest"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="View Requests"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="12sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/viewRoomTrainees"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:layout_marginTop="1dp"
                android:background="@drawable/bg_add_activity">
                <TextView
                    android:id="@+id/textViewTrainees"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="View Trainees"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="12sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:background="@drawable/bg_room_rooms"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/activeActivityBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:layout_marginRight="5dp"
                android:text="@string/active"
                android:backgroundTint="@color/teal"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/inactiveActivityBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:layout_marginLeft="5dp"
                android:text="@string/inactive"
                android:backgroundTint="@color/teal"
                android:textColor="@color/white" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/noActivities"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:visibility="gone"
                android:gravity="center"
                android:background="@android:color/transparent"
                android:padding="15dp">

                <TextView
                    android:id="@+id/noActText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_active_activities"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/preloaderActivityLayout"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:visibility="gone"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/preloaderImageActivity"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:src="@drawable/logo_sp" />
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerRoomActivities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

