<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:id="@+id/frag_workout">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/workout_text"
        android:textColor="#013237"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.144"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayoutSquat"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:background="@color/teal"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <ImageView
            android:id="@+id/workoutImgSquat"
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:contentDescription="@string/squat"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/squat"
            tools:srcCompat="@drawable/squat" />

        <TextView
            android:id="@+id/workoutNameSquat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/squat"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutPushup"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_marginTop="28dp"
        android:background="@color/teal"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayoutSquat"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <ImageView
            android:id="@+id/workoutImgPushup"
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:contentDescription="@string/push_up"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/pushup"
            tools:srcCompat="@drawable/pushup" />

        <TextView
            android:id="@+id/workoutNamePushup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/push_up"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

