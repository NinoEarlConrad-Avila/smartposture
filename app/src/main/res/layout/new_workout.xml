<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Username_Color"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Background -->
        <View
            android:id="@+id/_bg__workout_ek2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/workoutses"/>

        <!-- Navigation Bar -->
        <LinearLayout
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/vector"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/workout_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="Poppins"
                android:text="@string/Home"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

        <!-- Workout Image -->
        <ImageView
            android:id="@+id/workout_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_below="@id/navigation"
            android:src="@drawable/workoutses"
            android:contentDescription="@string/workoutses"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp" />

        <!-- Button -->
        <LinearLayout
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/finish_workout_button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center"
                android:background="@drawable/bg_shape"
                android:fontFamily="Poppins"
                android:text="@string/Done"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
