        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Workout Summary Description:"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_edittext"
            android:padding="10dp"
            android:text="Great job on completing your squat session!\n\nTo enhance your squat technique, consider practicing slower repetitions, paying attention to your posture. Engaging your core throughout the movement will help maintain stability and prevent misalignment.\n\nKeep up the hard work, and remember that practice makes perfect!"
