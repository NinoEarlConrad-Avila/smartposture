<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YourActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Background Image -->
        <ImageView
            android:id="@+id/background_image"
            android:layout_width="match_parent"
            android:layout_height="844dp"
            android:src="@drawable/loginbackground"
            android:scaleType="centerCrop" />

        <!-- Group for Input Fields -->
        <LinearLayout
            android:id="@+id/input_fields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center_horizontal">

            <!-- Username Field -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <View
                    android:id="@+id/username_bg"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:background="@drawable/rectangle_4174_shape"
                    android:alpha="0.89" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_centerVertical="true"
                    android:fontFamily="Inter"
                    android:text="@string/username_string"
                    android:textColor="@color/username_color"
                    android:textSize="20sp"
                    android:textStyle="italic" />
            </RelativeLayout>

            <!-- Password Field -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <View
                    android:id="@+id/password_bg"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:background="@drawable/rectangle_4174_shape"
                    android:alpha="0.89" />

                <TextView
                    android:id="@+id/password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_centerVertical="true"
                    android:fontFamily="Inter"
                    android:text="@string/password_string"
                    android:textColor="@color/username_color"
                    android:textSize="20sp"
                    android:textStyle="italic" />
            </RelativeLayout>

            <!-- Confirm Password Field -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <View
                    android:id="@+id/confirm_password_bg"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:background="@drawable/rectangle_4174_shape"
                    android:alpha="0.89" />

                <TextView
                    android:id="@+id/confirm_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_centerVertical="true"
                    android:fontFamily="Inter"
                    android:text="@string/confirm_password_string"
                    android:textColor="@color/username_color"
                    android:textSize="20sp"
                    android:textStyle="italic" />
            </RelativeLayout>
        </LinearLayout>

        <!-- Sign In Button -->
        <RelativeLayout
            android:id="@+id/sign_in_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="600dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/sign_in_bg"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/rectangle_4172_shape" />

            <TextView
                android:id="@+id/sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="Lato"
                android:text="@string/sign_in_string"
                android:textColor="@color/bg_white_reg"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
